# Docker Compose Environment Variables
# Copy this file to .env and adjust values as needed

# Domain Names (for Traefik routing)
UI_FRONTEND_DOMAIN=frontend.example.com
UI_SERVICE_DOMAIN=ui-service.example.com
YOUTUBE_SERVICE_DOMAIN=youtube-service.example.com

# MongoDB
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password
MONGO_INITDB_DATABASE=ai_studio

# Service URLs (used by ui-service - internal Docker network)
SCRIPT_SERVICE_URL=http://script-service:8000
AUDIO_SERVICE_URL=http://audio-service:8000
VIDEO_SERVICE_URL=http://video-service:8000
SUBTITLE_SERVICE_URL=http://subtitle-service:8000
YOUTUBE_SERVICE_URL=http://youtube-service:8000

# API Keys (to be filled as needed)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# ElevenLabs API Keys for audio-service (up to 5 keys for rotation)
ELEVENLABS_API_KEY1=your_elevenlabs_api_key1_here
ELEVENLABS_API_KEY2=your_elevenlabs_api_key2_here
ELEVENLABS_API_KEY3=your_elevenlabs_api_key3_here
ELEVENLABS_API_KEY4=your_elevenlabs_api_key4_here
ELEVENLABS_API_KEY5=your_elevenlabs_api_key5_here
ELEVENLABS_VOICE_ID=NOpBlnGInO9m6vDvFkFC

# Audio-service configuration
APP_NAME=FastAPI Clean Architecture
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development
API_V1_PREFIX=/api/v1
ALLOWED_HOSTS='["*"]'
LOG_LEVEL=INFO
LOG_FORMAT=text
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100

# YouTube API (for youtube-service)
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI="https://${YOUTUBE_SERVICE_DOMAIN}/auth/callback"

# Application Ports (for local access if not using Traefik)
UI_SERVICE_PORT=8000
SCRIPT_SERVICE_PORT=8001
AUDIO_SERVICE_PORT=8002
VIDEO_SERVICE_PORT=8003
SUBTITLE_SERVICE_PORT=8004
YOUTUBE_SERVICE_PORT=8005
MONGODB_PORT=27017
